<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginViewModel"
            type="com.mvgx.main.ui.LoginViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_login" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_40"
                android:paddingEnd="@dimen/dp_40">
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text="@string/login_name"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_10_white_background_black_border_view"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/login_name" />

                    <EditText
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/login_name"
                        android:text="@={loginViewModel.userName}"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/login_password"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_10_white_background_black_border_view"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/login_ps" />

                    <EditText
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/login_password"
                        android:inputType="textPassword"
                        android:text="@={loginViewModel.password}"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_marginEnd="@dimen/dp_15"
                        android:id="@+id/iv_swich_passwrod"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="18dp"
                        android:padding="3dp"
                        android:scaleType="center"
                        android:visibility="gone"
                        android:src="@mipmap/login_hidden" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/login_code"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_10_white_background_black_border_view"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/login_code" />

                    <EditText
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/login_code"
                        android:inputType="number"
                        android:text="@={loginViewModel.code}"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@{loginViewModel.onIsClickLogin == true? @drawable/shape_10_cyan_bg_click_view :@drawable/shape_10_cyan_bg_unclick_view}"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        binding:onClickCommand="@{loginViewModel.loginOnClickCommand}"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>